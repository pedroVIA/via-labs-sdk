{
  "name": "@pedrovia/sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for Via Labs V4 cross-chain messaging protocol on Solana",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run copy-idl",
    "copy-idl": "mkdir -p dist/idl && cp -R src/idl/. dist/idl/",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "solana",
    "via-labs",
    "cross-chain",
    "messaging",
    "anchor",
    "sdk"
  ],
  "author": "Via Labs",
  "license": "MIT",
  "peerDependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/web3.js": "^1.98.4",
    "bn.js": "^5.2.2",
    "js-sha3": "^0.9.3",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.2.0",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2"
  }
}
